block js
	// 页面相关
	script(type='text/javascript').
		//滚动，导航栏变化
		$('.site-header .navbar').removeClass('floating');
		$('.site-header .navbar-brand img').attr('src', '/images/page/logo附文字.png');
		$(window).on('scroll', function() {
			if ($(window).scrollTop() > $(".site-header > .navbar:first-child").height()) {
				$('.site-header .navbar').addClass('floating');
				$('.site-header .navbar-brand img').attr('src', '/images/page/logo附文字蓝.png');
			} else {
				$('.site-header .navbar').removeClass('floating');
				$('.site-header .navbar-brand img').attr('src', '/images/page/logo附文字.png');
			}
		});
