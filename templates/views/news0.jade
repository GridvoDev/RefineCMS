extends ../layouts/default0

mixin newsInfo(newsInfo)
	.newsInfo(data-ks-editable=editable(user, { list: 'NewsInfo', id: newsInfo.id }))
		h2: a(href='/news/information/' + newsInfo.slug)= newsInfo.title
		p.lead.text-muted Posted 
			if newsInfo.publishedDate
				| on #{newsInfo._.publishedDate.format('YYYY-MM-DD')} 
			if newsInfo.categories && newsInfo.categories.length
				| in 
				each cat, i in newsInfo.categories
					a(href='/news/' + cat.key)= cat.name
					if i < newsInfo.categories.length - 1
						| , 
					else
						|  
		if newsInfo.imageUrl
			img(src=newsInfo.imageUrl,style={height:'100px'}).img.pull-right
		p!= newsInfo.content.brief
		if newsInfo.content.extended
			p.read-more: a(href='/news/information/' + newsInfo.slug) Read more...

block intro
	.container
		h1= data.category ? data.category.name : 'New Infos'

block content
	.container: .row
		.col-sm-8.col-md-9
			if filters.category && !data.category
				h3.text-muted Invalid Category.
			else
				if data.newsInfos.results.length
					if data.newsInfos.totalPages > 1
						h4.text-weight-normal Showing 
							strong #{data.newsInfos.first}
							|  to 
							strong #{data.newsInfos.last}
							|  of 
							strong #{data.newsInfos.total}
							|  news infos.
					else
						h4.text-weight-normal Showing #{utils.plural(data.newsInfos.results.length, '* news info')}.
					.new-infos
						each newsInfo in data.newsInfos.results
							+newsInfo(newsInfo)
					
					if data.newsInfos.totalPages > 1
						ul.pagination
							if data.newsInfos.previous
								li: a(href='?page=' + data.newsInfos.previous): span.glyphicon.glyphicon-chevron-left
							else
								li.disabled: a(href='?page=' + 1): span.glyphicon.glyphicon-chevron-left
							each p, i in data.newsInfos.pages
								li(class=data.newsInfos.currentPage == p ? 'active' : null)
									a(href='?page=' + (p == '...' ? (i ? data.newsInfos.totalPages : 1) : p ))= p
							if data.newsInfos.next
								li: a(href='?page=' + data.newsInfos.next): span.glyphicon.glyphicon-chevron-right
							else
								li.disabled: a(href='?page=' + data.newsInfos.totalPages): span.entypo.glyphicon.glyphicon-chevron-right
				else
					if data.category
						h3.text-muted There are no news infos in the category #{data.category.name}.
					else
						h3.text-muted There are no news infos yet.
		
		if data.categories.length
			.col-sm-4.col-md-3
				h2 Categories
				.list-group(style='margin-top: 70px;')
					a(href='/news', class=!data.category ? 'active' : false).list-group-item All Categories
					each cat in data.categories
						a(href='/news/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item= cat.name
