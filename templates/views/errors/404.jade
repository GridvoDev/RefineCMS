extends ../../layouts/default

block index-main
	.container
		h1!=errorTitle || 'Not found (404)'
		if 'object' == typeof errorMsg
			div(style='margin: 30px 0;').debug!= htmlStringify(errorMsg)
		else
			p.lead!= utils.textToHTML(errorMsg) || 'Sorry, the page you requested can\'t be found.'
		p: a(href='/').btn.btn-primary.btn-lg 回到首页
