extends ../../layouts/default0

block content
	.container
		h1!=errorTitle || 'Error (500)'
		if 'object' == typeof errorMsg
			div(style='margin: 30px 0;').debug!= htmlStringify(errorMsg)
		else
			p.lead!= utils.textToHTML(errorMsg) || 'Sorry, the site has encountered an error.'
		if err
			hr
			h3 Error Details
			pre: code
				if 'string' == typeof err
					!= utils.textToHTML(err)
				else
					!= htmlStringify(err)

		p If you're seeing this error often please 
			a(href='https://www.gridvo.com/feedback', target='_blank') let us know.
